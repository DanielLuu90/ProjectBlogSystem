<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <article>
      <h3><%= @entry.name %></h3>
      <p>
        <%= @entry.content_entry %>
      </p>
    </article>
    <div>
      <h4>Comments (<%= @comments.count %>)</h4>
      <%= render 'comments/comment' %>
     </div>
    <%=render 'comments/new' %>
  </div>
</div>